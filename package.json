{
  "name": "feathers-hook-breaker",
  "version": "1.0.0",
  "description": "An Opossum-based Circuit Breaker built to be inserted into the Feathersjs Hook Chain",
  "main": "lib/breaker.js",
  "types": "types",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "opossum": "^5.0.0"
  },
  "devDependencies": {
    "@feathersjs/adapter-tests": "^4.5.2",
    "@feathersjs/feathers": "^4.5.3",
    "chai": "^4.2.0",
    "feathers-memory": "^4.1.0",
    "istanbul": "^1.1.0-alpha.1",
    "loud-rejection": "^2.2.0",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "semistandard": "^14.2.0",
    "semantic-release": "^18.0.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1"
  },
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "publish": "git push origin --tags && git push origin",
    "changelog": "github_changelog_generator && git add CHANGELOG.md && git commit -am \"Updating changelog\"",
    "lint": "semistandard --fix",
    "mocha": "mocha --recursive --config .mocharc.json test/**/*.test.js",
    "test": "npm run lint && npm run coverage",
    "test:dev": "npm run mocha -- --watch --recursive --watch-files src/**/*.js,test/**/*.js test/**/*.test.js",
    "coverage": "nyc npm run mocha",
    "semantic-release": "semantic-release",
    "semantic-release:level": "npx --no-install semantic-release --no-ci --dry-run | egrep 'complete: (minor|major|patch)' | egrep -o '(minor|major|patch)' > .NEXT_VERSION_LEVEL",
    "semantic-release:version": "npx --no-install semantic-release --no-ci --dry-run | egrep 'next release version is ([0-9]+\\.[0-9]+\\.[0-9]+)' | egrep -o '([0-9]+\\.[0-9]+\\.[0-9]+)' > .NEXT_VERSION",
    "semantic-release:next": "npm run semantic-release:level && npm run semantic-release:version",
    "release:publish": "npm run test && npm run semantic-release:next && VERSION=$(cat .NEXT_VERSION_LEVEL) && yes | np $VERSION --no-yarn "
  },
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SolarCS/feathers-hook-breaker.git"
  },
  "keywords": [
    "feathers",
    "circuit-breaker",
    "feathers-plugin",
    "opossum"
  ],
  "author": {
    "name": "Ben Zelinski",
    "email": "bzelinski@cipherhealth.com"
  },
  "contributors": [
    {
      "name": "James Villarrubia",
      "email": "james.villarrubia@gmail.com"
    }
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/SolarCS/feathers-hook-breaker/blob/develop/LICENSE"
    }
  ],
  "bugs": {
    "url": "https://github.com/SolarCS/feathers-hook-breaker/issues"
  },
  "homepage": "https://github.com/SolarCS/feathers-hook-breaker#readme",
  "np": {
    "contents": "lib"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            }
          ]
        }
      ]
    ]
  }
}
